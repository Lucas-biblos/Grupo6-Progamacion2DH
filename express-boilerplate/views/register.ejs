<body>
	<!-- Header -->
	<header class="main-header">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-5 col-md-2">
					<a href="/" class="main-header_home-link">
						<img class="headerImg" src="/images/amazon-logo-s3f.png">
					</a>
				</div>
	
				<div class="col-7 col-md-6">
					<form action="/search" method="GET" class="search-form">
						<input type="text" name="search" placeholder="Buscar productos, marcas y más" class="search-form_input">
						<button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
					</form>
				</div>
	
				<div class="col-12 col-md-4">
					<a class="main-header_credit-link">
						<i class="fas fa-hand-holding-usd"></i>
						Todas las opiniones en un solo lugar.
					</a>
				</div>
			</div>
			<button class="btn-toggle-navbar">
				<i class="fas fa-bars"></i>
			</button>
			<nav class="main-navbar">
				<ul class="left-navbar">
					<li><a class="etiqheader index-titleMain" href="/">Todos los productos</a></li>
					<!-- solo logueado <li><a href="">Cargar productos</a></li> -->
				</ul>
                    <form action="/" method="POST" class="d-flex justify-content-center">
                        <button type="submit" >Home </button>
                    </form>
				</ul>
			</nav>
		</div>
	</header>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Registrate:</h2>
        </div>

        <div class="form-register">
            <form action="/register" method="POST">
                <div class="col-12">
                    <label for="email" class="registro">Email:</label>
                    <input type="email" id="email" name="email" required>
                    <% if (locals.errors && errors.email) { %>
						<p >
							<%= errors.email.msg %>                                
                        </p>                            
					<% } %>
                </div>
                <div class="col-12">
                    <label for="usuario" class="registro">Usuario:</label>
                    <input type="text" id="usuario" name="usuario" required>
                </div>
                <div class="col-12">
                    <label for="password" class="registro">Contraseña:</label>
                    <input type="password" id="password" name="password" required>
                    <% if (locals.errors && errors.password) { %>
						<p >
							<%= errors.password.msg %>                                
                        </p>                            
					<% } %>
                </div>
                <div class="col-12">
                    <label for="retypePassword" class="registro">Contraseña:</label>
                    <input type="password" id="retypePassword" name="retypePassword" required>
                    <% if (locals.errors && errors.retypePassword) { %>
						<p >
							<%= errors.retypePassword.msg %>                                
                        </p>                            
					<% } %>
                </div>
                <div class="col-12">
                    <label for="fecha" class="registro">Fecha de Nacimiento:</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>
                <div class="col-12">
                    <label for="dni" class="registro">Número de Documento:</label>
                    <input type="number" id="dni" name="dni" required>
                </div>
                <div class="col-12">
                    <label for="fotoPerfil" class="registro">Foto de Perfil:</label>
                    <input type="text" id="foto" name="foto" required>
                </div>
                <button type="submit" class="registro">Registrarse</button>
            </form>
        </div>
        
    </div>
</div>

<%- include('./partials/footer') %>