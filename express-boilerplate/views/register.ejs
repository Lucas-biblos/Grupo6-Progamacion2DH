<%- include('./partials/header') %>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Registrate:</h2>
        </div>

        <div class="form-register">
            <form action="/usuarios/profile/1" method="GET">
                <div class="col-12">
                    <label for="email" class="registro">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="col-12">
                    <label for="usuario" class="registro">Usuario:</label>
                    <input type="text" id="usuario" name="usuario" required>
                </div>
                <div class="col-12">
                    <label for="contraseña" class="registro">Contraseña:</label>
                    <input type="password" id="contraseña" name="contraseña" required>
                </div>
                <div class="col-12">
                    <label for="fechaNacimiento" class="registro">Fecha de Nacimiento:</label>
                    <input type="date" id="fechaNacimiento" name="fechaNacimiento" required>
                </div>
                <div class="col-12">
                    <label for="numeroDocumento" class="registro">Número de Documento:</label>
                    <input type="number" id="numeroDocumento" name="numeroDocumento" required>
                </div>
                <div class="col-12">
                    <label for="fotoPerfil" class="registro">Foto de Perfil:</label>
                    <input type="text" id="fotoPerfil" name="fotoPerfil" required>
                </div>
                <button type="submit" class="registro">Registrarse</button>
            </form>
        </div>
        
    </div>
</div>

<%- include('./partials/footer') %>